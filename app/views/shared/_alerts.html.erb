<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Daily Hours Alert", sticky: false, :time => 1200 ) %>
<% elsif flash[:error]%>
  <%= js add_gritter(flash[:error], title: "Daily Hours Error", sticky: false, :time => 1200 ) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Daily Hours Notification", sticky: false, :time => 1200 ) %>
<% end %>