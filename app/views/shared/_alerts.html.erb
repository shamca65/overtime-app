<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Overtime Application Alert", sticky: false, :time => 1200 ) %>
<% elsif flash[:error]%>
  <%= js add_gritter(flash[:error], title: "Overtime Application Error", sticky: false, :time => 1200 ) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Overtime Application Notification", sticky: false, :time => 1200 ) %>
<% end %>