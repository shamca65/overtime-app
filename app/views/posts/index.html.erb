<h1> Posts </h1>

  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th>
        id
      </th>
      <th>
        Date
      </th>
      <th>
        User
      </th>
      <th>
        Rationale
      </th>
    </tr>
    </thead>
    <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td>
        <%= post.id %>
      </td>
      <td>
        <%= post.date %>
      </td>
      <td>
       <%= post.user.username %>
      </td>
      <td>
        <%= post.rationale %>
      </td>
    </tr>

<% end %>