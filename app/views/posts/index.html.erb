<h1> Posts </h1>

  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th>
        Date
      </th>
      <th class="hidden-xs">
        Rationale
      </th>
      <th>
        Action
      </th>
    </tr>
    </thead>
    <tbody id="posts">
    <%= render @posts %>
    </tbody>
  </table>

<div id="paginator">
  <%= paginate @posts, remote: true %>
</div>